<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.NewTaskPage"
             Title="New Task Page">

    <VerticalStackLayout>
        <Entry x:Name="TaskEntry" Placeholder="Enter a new task" VerticalOptions="Start" />
        <Button x:Name="AddTaskButton" Text="Add Task" Clicked="AddTaskButton_Clicked" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
